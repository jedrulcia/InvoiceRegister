<Window x:Class="InvoiceRegister.WPF.Views.CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceRegister.WPF.Views"
        mc:Ignorable="d"
        Title="Create new invoice" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Invoice Number" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Client NIP" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Issue Date" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Sale Date" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Payment due Date" VerticalAlignment="Center" Margin="10,0,0,0"/>

        <TextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10, 0"/>
        <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10, 0"/>
        <DatePicker Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10, 0"/>
        <DatePicker Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10, 0"/>
        <DatePicker Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10, 0"/>

        <Button Grid.Row="5" Grid.Column="2" Width="100" Height="20" HorizontalAlignment="Right" Margin="0,0,10,0" Content="Add Invoice"/>
    </Grid>
</Window>
