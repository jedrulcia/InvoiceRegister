<Window x:Class="InvoiceRegister.WPF.Views.InvoiceDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:faWPF="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:local="clr-namespace:InvoiceRegister.WPF.Views"
        mc:Ignorable="d"
        Title="{Binding InvoiceVM.InvoiceNumber}" Height="450" Width="800"
        Loaded="InvoiceDetailsWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.Resources>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding InvoiceVM.IsPaid}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding InvoiceVM.IsPaid}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <StackPanel>
                        <Button Content="Change Status" Click="ChangeStatus_Click" Width="100" Height="20" Margin="0,10,0,0" VerticalAlignment="Top"/>
                        <DatePicker SelectedDate="{Binding NewPaymentDate}" Margin="0,10,0,0" Width="100" VerticalAlignment="Top"/>
                    </StackPanel>
                    <TextBlock  Text="Invoice Paid" Foreground="White" Background="Green" Padding="3" TextAlignment="Center" FontWeight="Bold"
                                Width="100" Height="20" VerticalAlignment="Center"/>
                </Grid>


                <Grid Grid.Row="1">
                    <Button Content="Delete Invoice" Click="DeleteInvoice_Click" Width="100" Height="20"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <TextBlock Margin="0,5,0,0">
                    <Run Text="Invoice Number: "/>
                    <Run Text="{Binding InvoiceVM.InvoiceNumber}"/>
                </TextBlock>
                <TextBlock Margin="0,25,0,0">
                    <Run Text="Issue Date: "/>
                    <Run Text="{Binding InvoiceVM.IssueDate}"/>
                </TextBlock>
                <TextBlock Margin="0,45,0,0">
                    <Run Text="Price Gross: "/>
                    <Run Text="{Binding InvoiceVM.PriceGross}"/>
                </TextBlock>
                <TextBlock Margin="0,65,0,0">
                    <Run Text="Sale Date: "/>
                    <Run Text="{Binding InvoiceVM.SaleDate}"/>
                </TextBlock>
                <TextBlock Margin="0,85,0,0">
                    <Run Text="Payment Date: "/>
                    <Run Text="{Binding InvoiceVM.PaymentDate}"/>
                </TextBlock>
                <TextBlock Margin="0,105,0,0">
                    <Run Text="Payment Due Date: "/>
                    <Run Text="{Binding InvoiceVM.PaymentDueDate}"/>
                </TextBlock>
            </Grid>

            <Grid Grid.Column="2">
                <TextBlock Margin="0,5,0,0">
                    <Run Text="Client Name: "/>
                    <Run Text="{Binding ClientVM.Name}"/>
                </TextBlock>
                <TextBlock Margin="0,25,0,0">
                    <Run Text="NIP: "/>
                    <Run Text="{Binding ClientVM.NIP}"/>
                </TextBlock>
                <TextBlock Margin="0,45,0,0">
                    <Run Text="Email: "/>
                    <Run Text="{Binding ClientVM.Email}"/>
                </TextBlock>
                <TextBlock Margin="0,65,0,0">
                    <Run Text="City: "/>
                    <Run Text="{Binding ClientVM.City}"/>
                </TextBlock>
                <TextBlock Margin="0,85,0,0">
                    <Run Text="Post Code: "/>
                    <Run Text="{Binding ClientVM.PostCode}"/>
                </TextBlock>
                <TextBlock Margin="0,105,0,0">
                    <Run Text="Street: "/>
                    <Run Text="{Binding ClientVM.Street}"/>
                </TextBlock>
            </Grid>

        </Grid>

        <Grid Grid.Row="1">
            <Expander Header="Expand">
                <Grid Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="0">
                        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Text="" x:Name="ErrorText" Foreground="Red" Height="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid Grid.Column="0" Grid.Row="1">
                        <TextBlock Text="Name:"/>
                    </Grid>
                    <Grid Grid.Column="0" Grid.Row="2">
                        <TextBox Text="{Binding CreateInvoiceItemVM.Name}" HorizontalAlignment="Left" Width="135"/>
                        <faWPF:FontAwesome Visibility="Hidden" Icon="ExclamationCircle" Foreground="Red" Width="10" Height="10"  
                           VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,7,0" x:Name="NameWarning"/>
                    </Grid>

                    <Grid Grid.Column="1" Grid.Row="1">
                        <TextBlock Text="Amount:"/>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <TextBox Text="{Binding CreateInvoiceItemVM.Amount}" HorizontalAlignment="Left" Width="135" Grid.RowSpan="3"/>
                        <faWPF:FontAwesome Visibility="Hidden" Icon="ExclamationCircle" Foreground="Red" Width="10" Height="10" 
                           VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,7,0" x:Name="AmountWarning" Grid.RowSpan="2"/>
                    </Grid>

                    <Grid Grid.Column="2" Grid.Row="1">
                        <TextBlock Text="Price (unit):"/>
                    </Grid>
                    <Grid Grid.Column="2" Grid.Row="2">
                        <TextBox Text="{Binding CreateInvoiceItemVM.Price}" HorizontalAlignment="Left" Width="135"/>
                        <faWPF:FontAwesome Visibility="Hidden" Icon="ExclamationCircle" Foreground="Red" Width="10" Height="10" 
                           VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,7,0" x:Name="PriceWarning"/>
                    </Grid>

                    <Grid Grid.Column="3" Grid.Row="1">
                        <TextBlock Text="VAT:"/>
                    </Grid>
                    <Grid Grid.Column="3" Grid.Row="2">
                        <TextBox Text="{Binding CreateInvoiceItemVM.VAT}" HorizontalAlignment="Left" Width="135"/>
                        <faWPF:FontAwesome Visibility="Hidden" Icon="ExclamationCircle" Foreground="Red" Width="10" Height="10" 
                           VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,7,0" x:Name="VATWarning"/>
                    </Grid>

                    <Grid Grid.Column="4" Grid.Row="1">
                    </Grid>

                    <Grid Grid.Column="4" Grid.Row="2">
                        <Button Content="Add" Click="AddInvoiceItem_Click"/>
                    </Grid>

                </Grid>
            </Expander>
        </Grid>

        <Grid Grid.Row="2">
            <DataGrid ItemsSource="{Binding InvoiceItemVMs}" x:Name="InvoiceItemsGrid" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="DeleteInvoiceItem_Click">
                                    <Button.Tag>
                                        <Binding Path="Id" />
                                    </Button.Tag>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
